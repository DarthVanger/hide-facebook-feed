{
  "name": "No Facebook Feed",
  "version": "1.0",
  "description": "Removes Facebook Feed on www.facebook.com, while allowing to use Messenger, Events etc.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "css": ["contentStyles.css"],
      "js": ["contentScript.js"]
    }
  ],

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Icon-16.png",
      "32": "images/Icon-32.png",
      "48": "images/Icon-48.png",
      "128": "images/Icon-128.png"
    }
  },
  "icons": {
    "16": "images/Icon-16.png",
    "32": "images/Icon-32.png",
    "48": "images/Icon-48.png",
    "128": "images/Icon-128.png"
  },
  "manifest_version": 2
}
